<div class="text-center">
    <div class="card text-center mx-auto" style="width: 18rem; margin-bottom: 20px;">
        <div class="card-body text-center">
            <h2 class="card-title">{{title}}</h2>
            <h3 class="card-text">{{description}}</h3>
            <h3 class="card-text">Priority -- {{priority}}</h3>
            <div class="card-footer text-muted">
                {{date}}
            </div>

        </div>

    </div>

    <form action="/todo/{{id}}?_method=DELETE" method="post">
        <button href="/todo/{{id}}/edit" type="submit" class="btn btn-default btn-danger">DELETE</button>
            <a href="/todo" type="button" role="button" class="btn btn-primary">Go Back</a>
         <a href="/todo/{{id}}/edit" type="button" role="button" class="btn btn-default btn-warning">EDIT</a>
    </form>

</div>